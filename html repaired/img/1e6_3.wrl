#VRML V2.0 utf8

Viewpoint	{
	position 0 0 30
  fieldOfView	.2
}

EXTERNPROTO Vector [
  eventIn SFVec3f setStart
  eventIn SFVec3f setEnd
  eventIn SFColor setStemColor
  eventIn SFFloat setStemTransparency
  eventIn SFColor setHeadColor
  eventIn SFFloat setHeadTransparency
  field SFVec3f startAt
  field SFVec3f endAt
  field SFFloat stemRadius
  field SFFloat headSize
  field SFFloat headRadius
  field SFColor stemColor
  field SFFloat stemTransparency
  field SFColor headColor
  field SFFloat headTransparency
]"p_vector01.wrl"

EXTERNPROTO Label[
  field MFString text
  field MFString sub
  field SFVec3f position
  field SFFloat size
  field SFColor color
]"p_label.wrl"

EXTERNPROTO DLine [
  field SFVec3f startAt
  field SFVec3f endAt
  field SFColor color
  field SFInt32 steps
]"p_dline.wrl"

EXTERNPROTO Line [
  field SFVec3f startAt
  field SFVec3f endAt
  field SFColor color
]"p_line.wrl"

Transform	{
	translation	-3 -2.3 0
  children [
		Label{
			text "0"
		  position -.2 -.2 0
			size .4
			color	0 0 0
	  }

	  Vector {
		  startAt	0 0 0
			endAt	5 0 0
			stemRadius .01
			stemColor	0 0 0
			headColor	0 0 0
		}

		Label{
			text "V"
		  position 5 -.4 0
			size .4
			color	0 0 0
	  }

	  Vector {
		  startAt	0 0 0
			endAt	0 5 0
			stemRadius .01
			stemColor	0 0 0
			headColor	0 0 0
		}

		Label{
			text "p"
		  position 1.8 1 0
			size .4
			color	0 0 0
	  }

		Label{
			text "Î”V"
		  position 2.15 -.35 0
			size .4
			color	0 0 0
	  }

		Label{
			text "p"
		  position -.2 5 0
			size .4
			color	0 0 0
	  }



    Shape	{
		  geometry DEF Ext Extrusion {
			  crossSection [
				  .01  .01
					.01 -.01
				 -.01 -.01
				 -.01  .01
				  .01  .01
				]
			}
			appearance Appearance	{
			  material Material	{
				  diffuseColor 1 0 0
				}
			}
		}

		DEF	Builder Script {
		  field	SFNode Ext USE Ext
			eventOut MFVec3f spine_changed
			directOutput TRUE
			url	"javascript:
			  var n = 10;
				var dx = 3/(n-1);
			  function initialize(){
					for (i=0; i<n; i++){
						x = 1 + i * dx;
						y = 4/x;
					  spine_changed[2*i] = new SFVec3f(x, y, 0);
						spine_changed[2*i+1] = new SFVec3f(x + dx, y, 0);
					} 
			  }
			"
			ROUTE	Builder.spine_changed	TO Ext.set_spine
		}

		Line {
		  startAt	2 2 0
			endAt	2 0 0
			color	0 0 0
		}

		Line {
		  startAt	2.333 2 0
			endAt	2.333 0 0
			color	0 0 0
		}

		Transform	{
		  translation	0 0 0
			children [
			  Shape	{
				  geometry IndexedFaceSet	{
					  coord	Coordinate {
						  point	[
							  2 2 0
								2.333 2 0
								2.333 0 0
								2 0 0
							]
						}
						coordIndex [
						  0 1 2 3 0
						]
						solid	FALSE
					}
					appearance Appearance	{
					  material Material	{
						  transparency .5
					  }
					}
				}
			]
		}

	]
}
